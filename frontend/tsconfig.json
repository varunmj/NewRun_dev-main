{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "include": ["src", "src/types.d.ts", "tailwind.config.ts", "postcss.config.js"]
}