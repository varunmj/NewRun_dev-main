{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src", "tailwind.config.ts", "postcss.config.js", "src/types/**/*"]
}